<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.absolutelysaurabh.counterapp.MainActivity">


    <TextView
        android:id="@+id/topping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:text="TOPPINGS"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topping"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:onClick="check"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whipped Cream"
        android:layout_below="@+id/topping"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:textSize="20sp"


        />
    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Quantity"
        android:layout_below="@+id/checkbox"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/incrbutton"
        android:layout_width="50dp"
        android:layout_marginTop="16dp"
        android:layout_height="45dp"
        android:text="+"
        android:background="#CE93D8"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/quantity_text"
        android:textSize="20sp"
        android:onClick="increase"

        />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/quantity_text"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/decrbutton"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:text ="-"

        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/quantity_text"
        android:background="#CE93D8"

        android:onClick="decrease"

        />
    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_below="@+id/decrbutton"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textAllCaps="true"/>
    <!--<TextView-->
        <!--android:id="@+id/sign"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="$"-->
        <!--android:layout_below="@+id/price_text"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:paddingTop="16dp"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="24sp"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--/>-->

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/price_text"
        android:text="0"
        android:paddingLeft="10dp"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/message"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderbutton"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/orderbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerInParent="true"
        android:text="order"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:background="#CE93D8"
        android:onClick="submitOrder"
        android:layout_marginTop="16dp"

        />


</RelativeLayout>
